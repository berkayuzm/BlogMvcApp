@model IEnumerable<BlogMvcApp.NewFolder1.ApplicationUser>
@{
    ViewBag.Title = "Index";
}

    <div class="panel panel-primary">
        <div class="panel-heading">
            Users
        </div>

        <table class="table table-striped">
            <tr>
                <th>Id</th>
                <th>UserName</th>
                <th>Email</th>
            </tr>

            @if (Model.Count() == 0)
            {

                <tr>
                    <td colspan="3" class="text-center">
                        Kullanıcı yok
                    </td>

                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <th>@item.Id</th>
                        <th>@item.UserName</th>
                        <th>@item.Email</th>
                    </tr>
                }

            }
        </table>
    </div>
